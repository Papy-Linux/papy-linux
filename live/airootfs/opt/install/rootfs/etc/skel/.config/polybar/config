[colors]
accent = #1f1f1f
foreground = #ffffff

[bar/top]
width = 100%
height = 40

background = ${colors.accent}
foreground = ${colors.foreground}

padding = 1
module-margin-left = 1
module-margin-right = 1

font-1 = Material Icons:size=16;5.5
font-0 = DejaVu Sans:size=14;4

fixed-center = true

modules-left = homepage previouspage nextpage
modules-center = date
modules-right = poweroff

cursor-click = pointer

[module/homepage]
type = custom/script
exec = echo " "
click-left = curl http://localhost:8080/home

[module/previouspage]
type = custom/script
exec = echo ""
click-left = xdotool key Alt+Left

[module/nextpage]
type = custom/script
exec = echo ""
click-left = xdotool key Alt+Right

[module/date]
type = internal/date

time = "%H:%M"

label = %time%

[module/poweroff]
type = custom/script
exec = echo " "
click-left = curl 'http://localhost:8080/close' && sleep 1 && poweroff
