# Win modifier
set $mod Mod4

# No borders
for_window [class="^.*"] border pixel 0

# Debugging terminal
for_window [class="XTerm"] floating enable
bindsym $mod+Shift+t exec --no-startup-id xterm

# Move windows
floating_modifier $mod

# Start polybar
exec --no-startup-id polybar top
# Wait for internet and start firefox
exec --no-startup-id while ! ping 8.8.8.8 -c 1; do sleep 0.2; done && cd ~/chromium && firefox "https://www.google.com"

# Enable numpad
exec --no-startup-id numlockx on

# i3 doesn't work without it so...
bindsym $mod+1 workspace number 1

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
